    "prettier": "^3.6.2",
    "sass-embedded": "^1.93.3",
    "tailwindcss": "^4.1.14",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^6.3.7",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "@taco_tsinghua/graphnode-sdk": "^0.1.4",
