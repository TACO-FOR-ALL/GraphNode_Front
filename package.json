{
  "name": "graphnode_front",
  "version": "1.0.0",
  "description": "TACO 4기 GraphNode의 프론트앤드 코드입니다.",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.graphnode.app",
    "productName": "GraphNode",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "afterSign": "scripts/notarize.cjs",
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
